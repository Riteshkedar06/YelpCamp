<% layout("layouts/boilerplate.ejs") %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campground" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" required>
                <div class="valid-feedback">
                    Valid Title
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
                <div class="valid-feedback">
                    Valid Location
                </div>
            </div>
            <div class="form-file custom-file">
                <input class="form-control" type="file" name="image" id="formFileMultiple" multiple>
                </label>
            </div>
            <!-- <div class="mb-3"> 
                <label class="form-label" for="image">Image URl</label>
                <input class="form-control" type="text" name="campground[image]" id="image" required>
                <div class="valid-feedback">
                    Valid Image
                </div>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="image">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="text" class="form-control" aria-describedby="basic-addon1" name="campground[price]"
                        id="price" placeholder="0.0" aria-label="price" required>
                    <div class="valid-feedback">
                        Valid Price
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description"
                    required></textarea>
            </div>
            <div class="mb-3"><button class="btn btn-success">Add Campground</button></div>

        </form>
        <a href="/campground">Back To All Campground</a>
    </div>
</div>